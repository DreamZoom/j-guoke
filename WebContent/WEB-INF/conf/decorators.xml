<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
	<decorator name="main" page="main_layout.ftl">
		<pattern>/*</pattern>
	</decorator>
	<decorator name="project" page="project_layout.ftl">
		<pattern>/Feature/*</pattern>
		<pattern>/Requirement/*</pattern>
		<pattern>/Word/*</pattern>
		<pattern>/Model/*</pattern>
	</decorator>
	
	<!-- 不需要过滤的请求 -->
	<excludes>
		<pattern>/Users/Login*</pattern>
		<pattern>/*/Roles/*</pattern>
		<pattern>/static/**</pattern>
		<pattern>/*/Permissions/*</pattern>
		<pattern>/*/PermissionsRoleId/*</pattern>
		<pattern>/*/Edit/*</pattern>
		<pattern>/*/Upload/*</pattern>
		<pattern>/*/Extra/*</pattern>
		<pattern>/*/Resource/*</pattern>
		<pattern>/Resource/*/*</pattern>
		<pattern>/WeiXin</pattern>
		<pattern>/Project/Preview*</pattern>
		<pattern>/Project/AppList*</pattern>
		<pattern>/Account/*</pattern>
		<pattern>/Manage/Index</pattern>
		<pattern>/crossdomain.html</pattern>
	</excludes>
</decorators>